<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/text_customization"
        app:iconSpaceReserved="false">

        <SwitchPreference
            app:key="transparent_status_bar"
            app:title="@string/text_transparent_status_bar"
            app:summary="@string/text_transparent_status_bar_help"
            app:iconSpaceReserved="false"
            app:defaultValue="false"/>

        <SwitchPreference
            app:key="display_clock"
            app:title="@string/text_display_clock"
            app:iconSpaceReserved="false"
            app:defaultValue="false"/>

        <ListPreference
            app:key="icon_pack"
            app:title="@string/text_icon_pack"
            app:iconSpaceReserved="false"
            app:defaultValue="none"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/text_notification_settings"
        app:iconSpaceReserved="false">

        <SwitchPreference
            app:key="display_notification"
            app:title="@string/text_display_notification"
            app:summary="@string/text_display_notification_help"
            app:iconSpaceReserved="false"
            app:defaultValue="true"/>

        <SwitchPreference
            app:key="hide_on_lock_screen"
            app:title="@string/text_hide_on_lock_screen"
            app:summary="@string/text_hide_on_lock_screen_help"
            app:iconSpaceReserved="false"
            app:defaultValue="true"/>

        <Preference
            app:summary="@string/text_select_notification_apps"
            app:dependency="display_notification"
            app:iconSpaceReserved="false"/>

        <ListPreference
            app:key="notification_app1"
            app:title="@string/text_application1"
            app:iconSpaceReserved="false"
            app:defaultValue="none"
            app:dependency="display_notification"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="notification_app2"
            app:title="@string/text_application2"
            app:iconSpaceReserved="false"
            app:defaultValue="none"
            app:dependency="display_notification"
            app:useSimpleSummaryProvider="true"/>

        <ListPreference
            app:key="notification_app3"
            app:title="@string/text_application3"
            app:iconSpaceReserved="false"
            app:defaultValue="none"
            app:dependency="display_notification"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/text_help"
        app:iconSpaceReserved="false">

        <Preference app:layout="@layout/help"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/text_about"
        app:iconSpaceReserved="false">

        <Preference app:layout="@layout/about"/>

    </PreferenceCategory>

</PreferenceScreen>