<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="@string/set_customization_title"
        app:iconSpaceReserved="false">

        <Preference
            app:title="@string/notification_settings_title"
            app:fragment="com.vincent_falzon.discreetlauncher.ActivitySettings$NotificationFragment"
            app:icon="@android:drawable/ic_menu_preferences"/>

        <SwitchPreference
            app:key="display_clock"
            app:title="@string/set_display_clock"
            app:iconSpaceReserved="false"
            app:defaultValue="false"/>

        <SwitchPreference
            app:key="transparent_status_bar"
            app:title="@string/set_transparent_status_bar"
            app:summary="@string/set_transparent_status_bar_hint"
            app:iconSpaceReserved="false"
            app:defaultValue="false"/>

        <SwitchPreference
            app:key="force_portrait"
            app:title="@string/set_force_portrait"
            app:summary="@string/set_force_portrait_hint"
            app:iconSpaceReserved="false"
            app:defaultValue="false"/>

        <ListPreference
            app:key="icon_pack"
            app:title="@string/set_icon_pack"
            app:iconSpaceReserved="false"
            app:defaultValue="none"
            app:useSimpleSummaryProvider="true"/>

        <MultiSelectListPreference
            app:key="hidden_applications"
            app:title="@string/set_hidden_applications"
            app:iconSpaceReserved="false"/>

        <Preference
            app:title="@string/export_import_title"
            app:icon="@android:drawable/ic_menu_upload">
            <intent
                android:targetPackage="com.vincent_falzon.discreetlauncher"
                android:targetClass="com.vincent_falzon.discreetlauncher.ActivityExportImport"/>
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/help_and_general_info_title"
        app:iconSpaceReserved="false">

        <Preference
            app:title="@string/help_title"
            app:fragment="com.vincent_falzon.discreetlauncher.ActivitySettings$HelpFragment"
            app:icon="@android:drawable/ic_menu_help"/>

        <Preference
            app:title="@string/changelog_title"
            app:fragment="com.vincent_falzon.discreetlauncher.ActivitySettings$ChangelogFragment"
            app:icon="@android:drawable/ic_input_get"/>

        <Preference app:layout="@layout/settings_about"/>

    </PreferenceCategory>

</PreferenceScreen>